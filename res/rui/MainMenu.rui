	- @MenuButton
	- position-y 44%
	- text "Editor"

btnOptions body button
	- @Button
	- @MenuButton
	- position-y 38%
	- text "Options"

btnExit body button
	- @Button
	- @MenuButton
	- position-y 32%
	- text "Exit"
